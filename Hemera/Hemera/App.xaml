<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Hemera.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <x:String x:Key="AppNameUpper">HEMERA</x:String>

        <Color x:Key="colorPrimary">#00c853</Color>
        <Color x:Key="colorLight">#11d462</Color>
        <Color x:Key="colorDark">#009423</Color>
        <Color x:Key="colorDarkTheme">#232323</Color>
        <Color x:Key="colorLightTheme">#FFFFFF</Color>
        <Color x:Key="colorSelectedOpaque">#5500c853</Color>

        <SolidColorBrush x:Key="brushPrimary" Color="#00c853" />
        <SolidColorBrush x:Key="brushDarkTheme" Color="#232323" />
        <SolidColorBrush x:Key="brushLightTheme" Color="#FFFFFF" />

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=White, Light=Black}" />
        </Style>
    </Application.Resources>
</Application>