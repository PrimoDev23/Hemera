<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Hemera.Views.Overview"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:Hemera.Converter"
    xmlns:models="clr-namespace:Hemera.Models"
    xmlns:popups="clr-namespace:Hemera.Views.Popups"
    xmlns:resx="clr-namespace:Hemera.Resx"
    xmlns:sh="clr-namespace:Sharpnado.Shades;assembly=Sharpnado.Shadows"
    xmlns:vm="clr-namespace:Hemera.ViewModels"
    x:Name="self"
    x:DataType="vm:OverviewViewModel">
    <ContentPage.Resources>
        <converter:InverterConverter x:Key="InverterConverter" />
    </ContentPage.Resources>
    <AbsoluteLayout>
        <Grid
            BackgroundColor="{AppThemeBinding Dark={StaticResource colorDarkTheme},
                                              Light={StaticResource colorLightTheme}}"
            RowDefinitions="56, *, 56"
            RowSpacing="0">
            <!--<Path
            Grid.Row="0"
            Margin="20,20,0,0"
            Data="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"
            Fill="{AppThemeBinding Dark=White,
                                   Light=Black}"
            HorizontalOptions="Start"
            Scale="1.4"
            VerticalOptions="Start">
            <Path.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenMenuCommand}" />
            </Path.GestureRecognizers>
        </Path>-->
            <sh:Shadows
                Grid.Row="0"
                CornerRadius="0"
                Shades="{AppThemeBinding Dark={sh:SingleShade Offset='0,2',
                                                              Opacity=0.4,
                                                              BlurRadius=4,
                                                              Color=Black},
                                         Light={sh:SingleShade Offset='0,2',
                                                               Opacity=0.3,
                                                               BlurRadius=1,
                                                               Color=#232323}}">
                <Frame
                    Padding="0"
                    BackgroundColor="{StaticResource colorPrimary}"
                    CornerRadius="0"
                    HasShadow="False">
                    <Grid Margin="0,0,0,0" ColumnDefinitions="50, *, 50">
                        <Path
                            Grid.Column="0"
                            Margin="8,19,0,0"
                            Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                            Fill="{AppThemeBinding Dark=White,
                                                   Light=Black}"
                            Scale="1.4">
                            <Path.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BackCommand}" />
                            </Path.GestureRecognizers>
                        </Path>
                        <Label
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            FontAttributes="Bold"
                            FontSize="17"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            InputTransparent="True"
                            Text="{Binding LiteralDate}"
                            VerticalOptions="Center" />
                        <DatePicker
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            BackgroundColor="Transparent"
                            Date="{Binding CurrentDate}"
                            FontAttributes="Bold"
                            FontSize="17"
                            HorizontalOptions="Center"
                            Opacity="0"
                            VerticalOptions="Center"
                            Visual="Material" />
                        <Path
                            Grid.Column="2"
                            Margin="0,19,12,0"
                            Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                            Fill="{AppThemeBinding Dark=White,
                                                   Light=Black}"
                            HorizontalOptions="End"
                            Scale="1.4">
                            <Path.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ForwardCommand}" />
                            </Path.GestureRecognizers>
                        </Path>
                        <Grid.GestureRecognizers>
                            <SwipeGestureRecognizer Command="{Binding BackCommand}" Direction="Right" />
                            <SwipeGestureRecognizer Command="{Binding ForwardCommand}" Direction="Left" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </Frame>
            </sh:Shadows>
            <Grid
                Grid.Row="1"
                Margin="0"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                RowDefinitions="30, *">
                <CollectionView
                    Grid.Row="1"
                    Margin="7,0"
                    BackgroundColor="Transparent"
                    ItemsSource="{Binding ActivitiesPerDay}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="2"
                            Orientation="Vertical"
                            Span="2"
                            VerticalItemSpacing="2" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Activity">
                            <sh:Shadows CornerRadius="8" Shades="{AppThemeBinding Dark={sh:SingleShade Offset='0,0.6', BlurRadius=2.1, Opacity=0.7, Color=#111111}, Light={sh:SingleShade Offset='0,0.5', BlurRadius=2, Opacity=0.2, Color=#232323}}">
                                <Frame
                                    Margin="5"
                                    Padding="0"
                                    BackgroundColor="{AppThemeBinding Dark={StaticResource colorDarkTheme},
                                                                      Light=White}"
                                    BorderColor="{Binding BorderColor}"
                                    CornerRadius="8"
                                    HasShadow="False"
                                    HeightRequest="120">
                                    <Grid
                                        ColumnDefinitions="*, 10, *"
                                        RowDefinitions="40, 40, 30"
                                        RowSpacing="0">
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontAttributes="Bold"
                                            FontSize="19"
                                            HorizontalOptions="End"
                                            HorizontalTextAlignment="End"
                                            Text="{Binding Date, StringFormat='{0:HH}'}"
                                            VerticalOptions="End" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            FontAttributes="Bold"
                                            FontSize="19"
                                            HorizontalOptions="End"
                                            HorizontalTextAlignment="End"
                                            Text="{Binding Date, StringFormat='{0:mm}'}"
                                            TextColor="{StaticResource colorPrimary}"
                                            VerticalOptions="Start" />
                                        <Label
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            FontSize="19"
                                            HorizontalOptions="Center"
                                            HorizontalTextAlignment="Center"
                                            Text="-"
                                            VerticalOptions="Center" />
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            FontAttributes="Bold"
                                            FontSize="19"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding EndDate, StringFormat='{0:HH}'}"
                                            VerticalOptions="End" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            FontAttributes="Bold"
                                            FontSize="19"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding EndDate, StringFormat='{0:mm}'}"
                                            TextColor="{StaticResource colorPrimary}"
                                            VerticalOptions="Start" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            FontSize="15"
                                            HorizontalOptions="Center"
                                            Text="{Binding Title}"
                                            VerticalOptions="Center" />
                                        <Path
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="20,0,0,0"
                                            Data="M17 3H7c-1.1 0-1.99.9-1.99 2L5 21l7-3 7 3V5c0-1.1-.9-2-2-2z"
                                            Fill="{Binding Category.BadgeBrush}"
                                            HorizontalOptions="Start"
                                            ScaleX="1.7"
                                            ScaleY="3"
                                            VerticalOptions="Start" />
                                        <Path
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="21.2,5,0,0"
                                            Data="{Binding Category.PathData}"
                                            Fill="#232323"
                                            HorizontalOptions="Start"
                                            VerticalOptions="Start" />
                                        <Path
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Margin="0,5,15,0"
                                            Data="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"
                                            Fill="{AppThemeBinding Dark=White,
                                                                   Light=Black}"
                                            HorizontalOptions="End"
                                            VerticalOptions="Start">
                                            <Path.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Path=BindingContext.OpenSelectionMenuCommand, Source={x:Reference self}}" CommandParameter="{Binding .}" />
                                            </Path.GestureRecognizers>
                                        </Path>
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.TappedCommand, Source={x:Reference self}}" CommandParameter="{Binding .}" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </sh:Shadows>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
            <BoxView
                x:Name="backgroundLayer"
                Grid.Row="0"
                Grid.RowSpan="2"
                x:FieldModifier="public"
                BackgroundColor="#AA232323"
                IsVisible="{Binding BottomMenuVisible}"
                Opacity="0">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ExpandMenuCommand}" />
                </BoxView.GestureRecognizers>
            </BoxView>
            <Frame
                x:Name="bottomMenu"
                Grid.Row="1"
                Grid.RowSpan="2"
                Padding="0"
                x:FieldModifier="public"
                BackgroundColor="#181818"
                CornerRadius="8"
                HasShadow="False"
                HeightRequest="400"
                TranslationY="344"
                VerticalOptions="End">
                <Grid RowDefinitions="50, 1, 48, *">
                    <Path
                        Grid.Row="0"
                        Margin="0,15,20,0"
                        Data="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"
                        Fill="{AppThemeBinding Dark=White,
                                               Light=Black}"
                        HorizontalOptions="End"
                        Scale="1.5"
                        VerticalOptions="Start">
                        <Path.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ExpandMenuCommand}" />
                        </Path.GestureRecognizers>
                    </Path>
                    <BoxView
                        Grid.Row="1"
                        BackgroundColor="{AppThemeBinding Dark=White,
                                                          Light=LightGray}"
                        Opacity="{AppThemeBinding Dark=0.1,
                                                  Light=0.5}" />
                    <Frame
                        Grid.Row="2"
                        Margin="8,0"
                        Padding="0"
                        BackgroundColor="{Binding MenuItems[0].BackColor}"
                        CornerRadius="8">
                        <Grid ColumnDefinitions="56, *">
                            <Path
                                Grid.Column="0"
                                Data="{Binding MenuItems[0].PathData}"
                                Fill="{AppThemeBinding Dark=White,
                                                       Light=Black}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontSize="17"
                                Text="{Binding MenuItems[0].Title}"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </Grid>
                <Frame.GestureRecognizers>
                    <SwipeGestureRecognizer Command="{Binding SlideUpCommand}" Direction="Up" />
                    <SwipeGestureRecognizer Command="{Binding SlideDownCommand}" Direction="Down" />
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>
        <sh:Shadows
            AbsoluteLayout.LayoutBounds=".50,.97,56,56"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            CornerRadius="50"
            IsVisible="{Binding BottomMenuVisible, Converter={StaticResource InverterConverter}}"
            Shades="{AppThemeBinding Dark={sh:SingleShade Offset='2,2',
                                                          Opacity=0.4,
                                                          BlurRadius=4,
                                                          Color=Black},
                                     Light={sh:SingleShade Offset='2,2',
                                                           Opacity=0.3,
                                                           BlurRadius=1,
                                                           Color=#232323}}">
            <Button
                Command="{Binding CreateNewCommand}"
                CornerRadius="50"
                FontSize="25"
                Text="+"
                TextColor="White">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStopCollection>
                            <GradientStop Offset="0.0" Color="#54e375" />
                            <GradientStop Offset="1" Color="{StaticResource colorPrimary}" />
                        </GradientStopCollection>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </sh:Shadows>
    </AbsoluteLayout>
</ContentPage>